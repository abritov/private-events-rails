<div class="event-form-container">
  <div class="event-form-card">
    <%= form_with(model: event, class: "event-form") do |form| %>
      <% if event.errors.any? %>
        <div id="error_explanation" class="form-errors">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
          <ul>
            <% event.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-input", required: true, placeholder: "Enter event title" %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-textarea", rows: 4, placeholder: "Describe your event..." %>
      </div>

      <div class="form-group">
        <%= form.label :date, class: "form-label" %>
        <%= form.datetime_local_field :date, class: "form-input", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :location, class: "form-label" %>
        <%= form.text_field :location, class: "form-input", required: true, placeholder: "Where is the event taking place?" %>
      </div>

      <div class="form-actions">
        <%= form.submit event.persisted? ? "Update Event" : "Create Event", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
